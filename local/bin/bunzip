#!/bin/bash

function ptimes {
    for i in $(seq 1 $2)
    do
         echo -n $1
    done
}

function progress {
    size=$(tput cols 2>/dev/null)
    if [ -z ${size+x} ]; then
	   return 0
    fi

    if [ $size -gt 14 ]; then
        size=$(expr $size - 10)
    else
        size=40
	echo "Size is 40"
    fi
    p=$(expr $1 \* $size)
    p=$(expr $p / $2)
    e=$(expr $size - $p)
    ptimes "#" $p
    ptimes "_" $e
    echo -n -e " [$p %]\r"
    
}

Max_Threads=`getconf _NPROCESSORS_ONLN`
Max_Threads=$((Max_Threads-2))

IF=$IFS
IFS=$'\n'

myArray=( "$@" )
total=`expr ${#myArray[@]} - 1`
c="0"

while [ $c -lt "$total" ]
do
	progress $c $total
	chunk="$c"
	threads="0"	
	while [[ "$chunk" -lt "$total" && "$threads" -lt "$Max_Threads" ]];
	do
		threads=$((threads+1))
		chunk=`expr $c + $threads`
	done

	threadList=()
	for n in `seq 0 $threads`
	do
		zip=${myArray[`expr $c + $n`]}
		folder="${zip%.zip}"
		mkdir -p "$folder"
		unzip -n -q "$zip" -d "$folder" &
		job=${!}
		threadList+=($job)
	done

	for j in ${threadList[@]}
	do
		wait $j
	done

	c=`expr $c + $threads + 1`

done
progress $total $total
echo " "
IFS=$IF


